# src/main/resources/.env.example

# ==========================================
# DATABASE (NeonDB PostgreSQL)
# ==========================================
DATABASE_URL=jdbc:postgresql://ep-xxx-xxx.us-east-2.aws.neon.tech/memorykeeper?sslmode=require
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_password

# ==========================================
# REDIS (Upstash)
# ==========================================
REDIS_HOST=your-redis.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==========================================
# JWT SECURITY
# ==========================================
JWT_SECRET=YourVerySecretKeyForJWTTokensMustBe256BitsLongForHS256Algorithm
JWT_EXPIRATION=86400000

# ==========================================
# AI SERVICES (ALL FREE)
# ==========================================

# Groq AI (FREE - 30 requests/min)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxx

# Hugging Face (FREE - Unlimited)
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxx

# Replicate (FREE - $0.50 credit)
REPLICATE_API_KEY=r8_xxxxxxxxxxxxxxxxxxxxx

# ElevenLabs (FREE - 10K chars/month)
ELEVENLABS_API_KEY=xi_xxxxxxxxxxxxxxxxxxxxx

# AssemblyAI (FREE - 5 hours/month)
ASSEMBLYAI_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# ==========================================
# CLOUDINARY (FREE - 25GB)
# ==========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# CORS
# ==========================================
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# ==========================================
# SERVER
# ==========================================
PORT=8080
SPRING_PROFILE=dev
LOG_LEVEL=DEBUG